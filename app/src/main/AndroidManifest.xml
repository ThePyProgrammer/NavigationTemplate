<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thepyprogrammer.navigation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ICA2">
        <activity
            android:name="com.thepyprogrammer.navigation.ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ICA2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thepyprogrammer.navigation.ui.auth.AuthActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ICA2.NoActionBar">
        </activity>
        <activity
            android:name="com.thepyprogrammer.navigation.ui.splash.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ICA2.NoActionBar">
        </activity>
        <activity
            android:name="com.thepyprogrammer.navigation.ui.onboarding.OnboardingActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ICA2.NoActionBar">
        </activity>
        <activity
            android:name="com.thepyprogrammer.navigation.ui.singlecard.SingleCardActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ICA2">
        </activity>
    </application>

</manifest>